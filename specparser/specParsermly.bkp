%token OF
%token FORMULA
%token REF
%token   PRIMITIVE 
 %token RELATION 
 %token  TRUE  
 %token FALSE 
 %token  ASSUME  
 %token NOT  
 %token LAMBDA 
 %token EXISTS
 %token  DOT  
